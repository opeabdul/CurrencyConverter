<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="1dp" />
                    <padding android:bottom="4dp" android:left="4dp" android:right="6dp" android:top="4dp" />
                    <stroke android:width="1dp" android:color="#ffc3c3c3" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center|right" android:src="@drawable/drop_down" />
            </item>
        </layer-list>
    </item>
</selector>